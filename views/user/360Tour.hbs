<script>
 
    var panorama,panorama2,panorama3, viewer, container, infospot, infospot2,infospotPositions;

    container = document.querySelector('#container');
  
    panorama = new PANOLENS.ImagePanorama('./images/panorama.jpg');
    panorama2 = new PANOLENS.ImagePanorama('./images/panorama2.jpg');
    panorama3 = new PANOLENS.ImagePanorama('./images/panoImage.jpeg');
   
   var scalingFactor = 3; // Adjust this value based on your needs

var infospotPositions = [
    new THREE.Vector3(-1370.06 * scalingFactor, 16.30 * scalingFactor, -790.14 * scalingFactor),
    new THREE.Vector3(250.06 * scalingFactor, 30.30 * scalingFactor, 2790.14 * scalingFactor),
    new THREE.Vector3(250.06 * scalingFactor, 30.30 * scalingFactor, 2790.14 * scalingFactor)
];


    infospot = new PANOLENS.Infospot(150, PANOLENS.DataImage.Info);
    infospot.position.set(-4000, 400, 1200);
    infospot.addHoverText('jeshin');
    infospot.addEventListener('hoverenter', function () {
        showVideoPopup();
    });
    infospot.addEventListener('hoverleave', function () {
        hideVideoPopup();
    });

    infospot2 = new PANOLENS.Infospot(150, PANOLENS.DataImage.Info);
    infospot2.position.set(2000, 100, 2000);
    infospot2.addHoverText('ritha');
    infospot2.addEventListener('hoverenter', function () {
        showVideoPopup();
    });
    infospot2.addEventListener('hoverleave', function () {
        hideVideoPopup();
    });

    panorama.add(infospot, infospot2);

    viewer = new PANOLENS.Viewer({
        container: container,
        autoRotate: true,
        autoRotateSpeed: 0.3,
          controlBar: false
    });

    panorama.link(panorama2,infospotPositions[0]);
    panorama2.link(panorama3,infospotPositions[1])

     panorama3.link(panorama,infospotPositions[2])

    viewer.add(panorama,panorama2,panorama3);

    function showVideoPopup() {
        document.getElementById('videoPopup').style.display = 'block';
    }

    function hideVideoPopup() {
        document.getElementById('videoPopup').style.display = 'none';
    }
    
</script>


